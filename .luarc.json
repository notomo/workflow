{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT"
  },
  "workspace": {
    "library": [
      "lua",
      "$VIMRUNTIME",
      "${3rd}/busted/library",
      "${3rd}/luassert/library",
      "${3rd}/luv/library"
    ],
    "checkThirdParty": false
  },
  "diagnostics": {
    "globals": [
      "vim"
    ],
    "groupFileStatus": {
      "await": "Any",
      "codestyle": "None",
      "conventions": "Any",
      "strict": "Any",
      "strong": "None",
      "ambiguity": "Any",
      "duplicate": "Any",
      "global": "Any",
      "luadoc": "Any",
      "redefined": "Any",
      "type-check": "Any",
      "unbalanced": "Any",
      "unused": "Any"
    }
  }
}